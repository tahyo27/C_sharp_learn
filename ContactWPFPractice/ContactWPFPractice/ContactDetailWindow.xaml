<Window x:Class="ContactWPFPractice.ContactDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactWPFPractice"
        mc:Ignorable="d"
        Title="ContactDetailWindow" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="NameTextBox" Margin="0, 0, 0, 5"/>
            <TextBlock x:Name="EmailTextBox" Margin="0, 0, 0, 5"/>
            <TextBlock x:Name="PhoneTextBox" Margin="0, 0, 0, 5"/>
            <Button Content="Update" x:Name="UpdateButton" Margin="0, 0, 0, 5" Click="UpdateButton_Click" />
            <Button Content="Delete" x:Name="DeleteButton" Margin="0, 0, 0, 5" Click="DeleteButton_Cick"
              Background="Red" Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
