<Window x:Class="WPF_ZooManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_ZooManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Zoo List" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10, 10, 0, 0"/>
        <ListBox x:Name="ListZoos" HorizontalAlignment="Left" Height="175" Margin="10, 41, 0, 0" VerticalAlignment="Top" Width="150" SelectionChanged="ListZoo_SelectionChanged"/>
        <Label Content="Associated Animals List" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="193,10,0,0"/>
        <ListBox x:Name="ListAssociatedAnimals" HorizontalAlignment="Left" Height="175" Margin="193,41,0,0" VerticalAlignment="Top" Width="150" />
    </Grid>
</Window>
